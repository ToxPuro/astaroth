auxiliary Field FIELD

hostdefine STENCIL_ORDER (0)

enum MY_STEP_NUM
{
	FIRST,
	SECOND
}

input MY_STEP_NUM STEP_NUM
Kernel singlepass_solve(MY_STEP_NUM step_num, real scaling_factor) {
    write(FIELD, int(step_num)*scaling_factor)
    //write(FIELD, 1.0)
}

BoundConds bcs
{
	periodic(BOUNDARY_XYZ)
}
ComputeSteps rhs(bcs)
{
	singlepass_solve(STEP_NUM,1.0)
}
